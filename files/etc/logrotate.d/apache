/var/log/httpd/*_log {
	daily
	rotate 60
	compress
	delaycompress
	missingok
	create 0640 root logview
	sharedscripts

	postrotate
		/usr/local/sbin/httpd-safe-reload
	endscript
}

/var/log/httpd/v*www/*/*_log {
	daily
	rotate 60
	compress
	delaycompress
	missingok
	create 0644 root root
	sharedscripts

	postrotate
		/usr/local/sbin/httpd-safe-reload
	endscript
}

