#!/bin/bash

self_bin=`readlink -e "$0"`
curr_dir=`dirname "$self_bin"`

system_drush="$curr_dir/bin/packages/drush/drush"

if [ -f "$HOME/.drush/drush" -a -x "$HOME/.drush/drush" ]; then
  hash -p "$HOME/.drush/drush" drush
elif [ -f "$HOME/.drush/drush/drush" -a -x "$HOME/.drush/drush/drush" ]; then
  hash -p "$HOME/.drush/drush/drush" drush
elif [ -x "$system_drush" ]; then
  hash -p "$system_drush" drush
fi

drush "$@"
